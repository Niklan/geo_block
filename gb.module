<?php

/*
 * @file
 * Geo Block - Creates a block, in which the data are derived based on the geographical location of the visitor.
 */

define('GB_DEFAULT_GEOSERVICE', 'ipgeobase');
define('GB_DEFAULT_BLOCKS_COUNT', 1);

